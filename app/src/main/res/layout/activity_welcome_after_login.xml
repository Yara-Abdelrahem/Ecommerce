<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.WelcomeAfterLogin">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher_done"
        android:layout_marginTop="110dp"
        android:id="@+id/done"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/successful"
        android:layout_margin="20dp"

        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:id="@+id/text"
        android:layout_marginTop="40dp"
        android:textColor="@color/black"
        android:paddingBottom="50dp"
        android:textAlignment="center"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text"
        android:paddingTop="40dp"
        android:text="You have successfully registered in our appand start working on it."
        android:textAlignment="center"
        android:layout_marginHorizontal="20dp"

        android:textSize="15sp"
        android:textColor="#A9A0A0"
        android:textStyle="bold" />
    <Button
        android:id="@+id/start"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:text="Start Shopping"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:backgroundTint="@null"
        app:cornerRadius="60dp" />
 </RelativeLayout>